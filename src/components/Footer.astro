---
const today = new Date();
const ContactLinks = [
  {
    label: "Github",
    url: "https://github.com/distvision"
  },
  {
    label: "Twitter",
    url: "https://twitter.com/distor_things"
  },
  {
    label: "Instagram",
    url: "https://www.instagram.com/user_fred_/"
  }
];
---

<footer class="p-6">
  <div>
    <p class="text-sm font-normal text-neutral-400 text-center">
      &copy; {today.getFullYear()} distorthings. All rights reserved.
    </p>
    <div class="flex justify-center gap-5 items-center">
      {
        ContactLinks.map((item) => (
          <div>
            <a href={item.url} class="text-sm font-normal text-neutral-400">
              <span>{item.label}</span>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</footer>
