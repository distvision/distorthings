---
const today = new Date();
const ContactLinks = [
  {
    label: "Github",
    url: "https://github.com/distvision"
  },
  {
    label: "Twitter",
    url: "https://twitter.com/distor_things"
  },
  {
    label: "Instagram",
    url: "https://www.instagram.com/user_fred_/"
  }
];
---

<footer class="my-6 px-6 md:px-16 max-w-4xl mx-auto">
  <div class="border-t-2 border-neutral-400">
    <p class="text-base font-normal text-neutral-400 text-center mt-6">
      &copy; {today.getFullYear()} distorthings.
    </p>
    <div class="flex justify-center gap-5 items-center">
      {
        ContactLinks.map((item) => (
          <div>
            <a href={item.url} class="text-base font-normal text-neutral-400">
              <span>{item.label}</span>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</footer>
