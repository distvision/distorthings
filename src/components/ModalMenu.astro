---
import type { HTMLAttributes } from "astro/types";
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";

type Props = HTMLAttributes<"button">;
---

<div class="bg-neutral-900 w-full">
  <div role="dialog" aria-modal="true" class="w-full">
    <!-- botao -->
    <div
      class="flex justify-between w-full py-6 px-6 items-center border-b-2 border-neutral-400"
    >
      <div class="w-24">
        <Logo />
      </div>
      <button
        type="button"
        class="text-2xl"
        id="triggerEl2"
        aria-label="Open navigation"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          ><path
            fill="currentColor"
            d="M6.4 19L5 17.6l5.6-5.6L5 6.4L6.4 5l5.6 5.6L17.6 5L19 6.4L13.4 12l5.6 5.6l-1.4 1.4l-5.6-5.6L6.4 19Z"
          ></path></svg
        ></button
      >
    </div>
    <!-- menu -->
    <div
      class="md:text-xl font-medium text-4xl flex flex-col md:flex-row md:items-center md:gap-6 w-full"
    >
      <HeaderLink id="HeaderLink" href="/">Home</HeaderLink>
      <HeaderLink id="HeaderLink2" href="/blog">Blog</HeaderLink>
      <HeaderLink
        id="HeaderLink3"
        href="https://github.com/distvision"
        target="_blank"
      >
        GitHub
      </HeaderLink>
    </div>
  </div>

  <script>
    // set the target element that will be collapsed or expanded (eg. navbar menu)
    const $targetEl: HTMLElement | null = document.getElementById("targetEl");

    // optionally set a trigger element (eg. a button, hamburger icon)
    const $triggerEl: HTMLElement | null = document.getElementById("triggerEl");

    const $triggerEl2: HTMLElement | null =
      document.getElementById("triggerEl2");

    const $triggerEl3: HTMLElement | null =
      document.getElementById("HeaderLink");
    const $triggerEl4: HTMLElement | null =
      document.getElementById("HeaderLink2");
    const $triggerEl5: HTMLElement | null =
      document.getElementById("HeaderLink3");

    $triggerEl2.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
      console.log("clicado2");
    });

    $triggerEl3.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
    $triggerEl4.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
    $triggerEl5.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
  </script>
</div>
