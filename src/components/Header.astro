---
import type { HTMLAttributes } from "astro/types";
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

type Props = HTMLAttributes<"button">;
---

<!-- <HeaderLink href="/about">About</HeaderLink> -->
<nav class="bg-neutral-500 px-6 fixed w-full">
  <div class="w-full mx-auto">
    <div
      class="flex flex-wrap items-center justify-between mx-auto py-6 sm:hidden"
    >
      <a href="
      https:
      flowbite.com
      " class="flex items-center">
        <img
          src="https://flowbite.com/docs/images/logo.svg"
          class="h-8 mr-3"
          alt="Flowbite Logo"
        />
      </a>
      <button
        id="triggerEl"
        type="button"
        class="inline-flex items-center ml-3 sm:hidden"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          ><path
            fill="currentColor"
            d="M3 18v-2h18v2H3Zm0-5v-2h18v2H3Zm0-5V6h18v2H3Z"></path></svg
        >
      </button>
    </div>

    <!-- Target -->
    <div
      class="absolute sm:static h-screen sm:h-0 inset-0 transform duration-700 -translate-y-full ease-in-out"
      id="targetEl"
    >
      <div
        id="ani"
        class="bg-neutral-700 sm:bg-inherit w-full sm:flex sm:justify-between"
      >
        <div
          class="flex flex-wrap items-center justify-between p-6 border-b-2 border-gray-200 sm:border-none"
        >
          <a
            href="
        https:
        flowbite.com
        "
            class="flex items-center"
          >
            <img
              src="https://flowbite.com/docs/images/logo.svg"
              class="h-8"
              alt="Flowbite Logo"
            />
          </a>
          <button
            id="triggerEl2"
            type="button"
            class="inline-flex items-center ml-3 sm:hidden"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M6.4 19L5 17.6l5.6-5.6L5 6.4L6.4 5l5.6 5.6L17.6 5L19 6.4L13.4 12l5.6 5.6l-1.4 1.4l-5.6-5.6L6.4 19Z"
              ></path></svg
            >
          </button>
        </div>

        <div class="font-medium text-4xl flex flex-col sm:flex-row sm:gap-8">
          <HeaderLink id="HeaderLink" href="/">Home</HeaderLink>
          <HeaderLink id="HeaderLink2" href="/blog">Blog</HeaderLink>
          <HeaderLink
            id="HeaderLink3"
            href="https://github.com/distvision"
            target="_blank"
          >
            GitHub
          </HeaderLink>
        </div>
      </div>
    </div>
  </div>

  <script>
    // set the target element that will be collapsed or expanded (eg. navbar menu)
    const $targetEl: HTMLElement | null = document.getElementById("targetEl");

    // optionally set a trigger element (eg. a button, hamburger icon)
    const $triggerEl: HTMLElement | null = document.getElementById("triggerEl");

    const $triggerEl2: HTMLElement | null =
      document.getElementById("triggerEl2");

    const $triggerEl3: HTMLElement | null =
      document.getElementById("HeaderLink");
    const $triggerEl4: HTMLElement | null =
      document.getElementById("HeaderLink2");
    const $triggerEl5: HTMLElement | null =
      document.getElementById("HeaderLink3");

    $triggerEl.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
      // console.log("clicado1");
    });
    $triggerEl2.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
      // console.log("clicado2");
    });

    $triggerEl3.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
    $triggerEl4.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
    $triggerEl5.addEventListener("click", () => {
      $targetEl.classList.toggle("-translate-y-full");
    });
  </script>
</nav>
