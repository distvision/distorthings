---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import NewHeader from "../components/NewHeader.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body
    class="m-auto text-left bg-neutral-900 break-words leading-normal text-neutral-300"
  >
    <header class="">
      <NewHeader />
    </header>
    <main class="max-w-4xl mx-auto px-6 md:px-16">
      <article>
        <div
          class="mt-6 text-justify font-medium mx-auto prose prose-neutral prose-headings:text-neutral-300 leading-normal prose-p:text-neutral-400 prose-code:text-violet-400 prose-em:text-neutral-300 prose-strong:text-neutral-300 prose-strong:font-bold prose-ul:text-neutral-300 prose-ol:text-neutral-300"
        >
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
